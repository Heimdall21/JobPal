{
  "short_name": "JobPal",
  "name": "JobPal Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "jobpal.png"
  },
   "icons": {
       "16": "logo192.png",
       "48": "logo192.png",
       "128": "logo192.png"
   },
   "permissions": [
        "activeTab",
        "storage"
   ],
   "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["content.js"]
      }
    ],
  "background": {
    "service_worker": "background.js"
  }
}
