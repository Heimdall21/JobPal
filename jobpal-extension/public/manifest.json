{
  "short_name": "JobPal",
  "name": "JobPal Extension",
  "version": "1.0",
   "manifest_version": 3,
   "action": {},
   "icons": {
       "16": "jobpal.png",
       "48": "jobpal.png",
       "128": "jobpal.png"
   },
   "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs"
   ],
   "host_permissions": [
     "https://*/*",
     "http://*/*"
   ],
   "background": {
        "service_worker": "background.bundle.js"
  },
  "content_scripts": [
     {
          "js": ["listener.bundle.js"],
          "matches": ["<all_urls>"],
          "all_frames": true
     }
  ]
}
